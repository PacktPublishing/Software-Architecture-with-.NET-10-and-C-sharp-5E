{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "sql": {
      "type": "container.v0",
      "connectionString": "Server={sql.bindings.tcp.host},{sql.bindings.tcp.port};User ID=sa;Password={sql-password.value};TrustServerCertificate=true",
      "image": "mcr.microsoft.com/mssql/server:2022-latest",
      "env": {
        "ACCEPT_EULA": "Y",
        "MSSQL_SA_PASSWORD": "{sql-password.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 1433
        }
      }
    },
    "DefaultConnection": {
      "type": "value.v0",
      "connectionString": "{sql.connectionString};Initial Catalog=DefaultConnection"
    },
    "grpcmicroservice": {
      "type": "project.v0",
      "path": "../GrpcMicroService/GrpcMicroService.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{grpcmicroservice.bindings.http.targetPort}",
        "ConnectionStrings__DefaultConnection": "{DefaultConnection.connectionString}",
        "DEFAULTCONNECTION_HOST": "{sql.bindings.tcp.host}",
        "DEFAULTCONNECTION_PORT": "{sql.bindings.tcp.port}",
        "DEFAULTCONNECTION_USERNAME": "sa",
        "DEFAULTCONNECTION_PASSWORD": "{sql-password.value}",
        "DEFAULTCONNECTION_URI": "mssql://sa:{sql-password.value}@{sql.bindings.tcp.host}:{sql.bindings.tcp.port}/DefaultConnection",
        "DEFAULTCONNECTION_JDBCCONNECTIONSTRING": "jdbc:sqlserver://{sql.bindings.tcp.host}:{sql.bindings.tcp.port};trustServerCertificate=true;databaseName=DefaultConnection",
        "DEFAULTCONNECTION_DATABASENAME": "DefaultConnection"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http2"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http2"
        }
      }
    },
    "fakesource": {
      "type": "project.v0",
      "path": "../FakeSource/FakeSource.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "GRPCMICROSERVICE_HTTP": "{grpcmicroservice.bindings.http.url}",
        "services__grpcmicroservice__http__0": "{grpcmicroservice.bindings.http.url}",
        "GRPCMICROSERVICE_HTTPS": "{grpcmicroservice.bindings.https.url}",
        "services__grpcmicroservice__https__0": "{grpcmicroservice.bindings.https.url}"
      }
    },
    "sql-password": {
      "type": "parameter.v0",
      "value": "{sql-password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true,
          "default": {
            "generate": {
              "minLength": 22,
              "minLower": 1,
              "minUpper": 1,
              "minNumeric": 1
            }
          }
        }
      }
    },
    "sql-password-uri-encoded": {
      "type": "annotated.string",
      "value": "{sql-password.value}",
      "filter": "uri"
    }
  }
}